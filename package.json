{
  "name": "anima",
  "version": "0.0.6",
  "description": "Anima的前端日志",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist -r git@github.com:animasling/anima.git",
    "build": "father build",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "release": "npm run build && npx lerna publish from-package",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "bootstrap": "lerna bootstrap"
  },
  "authors": [
    "animas@126.com"
  ],
  "repository": {
    "type": "git",
    "url": "git+git@github.com:animasling/anima.git",
    "branch": "master",
    "platform": "github"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "typings": "dist/index.d.ts",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@ant-design/moment-webpack-plugin": "^0.0.3",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@umijs/lint": "^4.0.0",
    "babel-plugin-import": "^1.13.6",
    "babel-plugin-version": "^0.2.3",
    "dumi": "^2.0.2",
    "eslint": "^8.23.0",
    "father": "^4.1.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.1",
    "lerna": "^6.4.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "stylelint": "^14.9.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@ant-design/icons": "^5.0.1",
    "ahooks": "^3.7.4",
    "antd": "^5.2.0"
  }
}
